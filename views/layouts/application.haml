!!!
%html{html_attrs('de')}
  %head
    %meta{ charset: 'utf-8'}
    /[if IE]
      %meta{ 'http-equiv'=> 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{ name: 'author', content: 'Christian Aust'}
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %meta{ name: 'description', lang: 'en', content: "Christian Aust, freelancing software consultant from Lohmar, near Cologne/Germany. I provide consulting and development of internet software. Specialized in #{top_tools.sort.join(', ')}" }
    %meta{ name: 'description', content: "Christian Aust, freier Software-Berater mit Sitz in Lohmar (bei Köln/Bonn). Ich berate und entwickle Software für das Internet. Spezialisiert auf #{top_tools.sort.join(', ')}" }
    %meta{ name: 'keywords', content: ((%w{Christian\ Aust Freelancer Internet Web Lohmar Siegburg Köln Bonn Software Berater} + top_tools).join(', ')) }
    %title Christian Aust, Software Consultant
    %link{ rel: 'shortcut icon', href: image_path('/favicon.ico') }
    %link{ rel: 'stylesheet', type: 'text/css', href: '//fonts.googleapis.com/css?family=Nixie+One|Open+Sans' }
    %link{ rel: 'stylesheet', type: 'text/css', href: stylesheet_path('application.css') }/
    %link{ rel: 'stylesheet', type: 'text/css', href: stylesheet_path('font-awesome.css') }/

  %body#start{ 'data-spy'=>'scroll', 'data-target'=>'#navbar', 'data-offset'=>'40' }
    %a{ name:'start' }
    #navbar.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.autoscroll.brand.hidden-phone{ href: '#start' }
            %img#logo-small{ src: asset_path('logo_small.png'), alt: 'Small' }
            Christian Aust
          %ul.nav.pull-right
            %li
              %a.autoscroll{ href: '#referenzen' } Referenzen
            %li
              %a.autoscroll{ href: '#angebot' } Mein Angebot
            %li
              %a.autoscroll{ href: '#projekte' } Projektliste

    #content.container{ itemscope:true, itemtype:'http://schema.org/Person'}
      = yield

    .ribbon.text-info.visible-desktop
      %a{ href: 'https://github.com/datenimperator/software-consultant.net', target:'_blank' }
        Quellen auf<br>
        github.com

    = partial(:language) if language != 'de'
    = partial(:tracking) if production?

    %script{ src: '//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js' }
    %script{ src: javascript_path('application.js') }
