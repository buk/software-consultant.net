- pages.each do |page|
  %article.summary
    %header
      %h1.subheader
        %a(href="#{url(page.abspath)}")= page.heading
    - if page.summary.nil? || page.summary.empty?
      ~ page.body(self)
    - else
      ~ page.summary
      %p.read_more
        %a(href="#{url(page.abspath)}")
          %i.icon-arrow-right
          = page.read_more
    = haml :page_meta, :layout => false, :locals => { :page => page }
